<h1>Edit Memo</h1>

    <%= form_tag("/memos/"+@memo.id.to_s ,:method => :patch) do%>
    <div class="form-group">
        <%= label_tag "form-title", "Title" %>
        <%= text_field :memos, :title ,class:"form-control", id:"form-title", value:@memo.title %>
    </div>
    <div class="form-group">
        <%= label_tag "form-content" , "Content" %>
        <%= text_field :memos, :body ,class:"form-control", id:"form-content", value:@memo.body %>
    </div>
    <div class="form-group">
        <%= label_tag "form-category" , "Category" %>
        <%= select_tag "memos[category_id]", options_from_collection_for_select(@categories, :id, :name) ,class:"form-control", id:"form-category" %>
    </div>
        <%= submit_tag "Edit" , class:"btn btn-primary" %>
<% end %>